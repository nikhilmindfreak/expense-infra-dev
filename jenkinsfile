pipeline {
    agent {
        label 'AGENT-1'
    }
    environment {
    // Ensure PATH includes the directory where Terraform is installed
    PATH = "${env.PATH}:/usr/local/bin"
    }
    options {
        timeout(time: 30, unit: 'MINUTES')
        disableConcurrentBuilds()
        ansiColor('xterm')
    }
    stages {
        stage('Init') {
            steps {
               sh """
                cd 01-vpc
                terraform plan
               """
            }
        }
        stage('Plan') {
            steps {
                sh """
                echo plan
                """
            }
        }
        stage('Deploy') {
            steps {
                sh """
                echo destroy
                """
            }
        }
    }
    post { 
        always { 
            echo 'I will always say Hello again!'
        }
        success { 
            echo 'I will run when pipeline is success'
        }
        failure { 
            echo 'I will run when pipeline is failure'
        }
    }
}